<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jaroslavistok.personalmobileassistantformanagingdiabetes.activities.HomeScreenActivity">


    <ImageButton
        android:id="@+id/showDataButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logbook_icon"
        android:background="@color/colorWhite"
        android:contentDescription="Show data button"
        android:layout_alignTop="@+id/showDatabaseButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/showDatabaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/information_icon"
        android:background="@color/colorWhite"
        android:contentDescription="Show databse button"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_icon"
        android:background="@color/colorWhite"
        android:contentDescription="Add button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/statisticsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/graph_icon"
        android:background="@color/colorWhite"
        android:contentDescription="Show statistics"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout_button"
        android:textColor="@color/colorWhite"
        android:id="@+id/logout_button"
        android:background="@color/colorAccent"
        android:layout_marginBottom="54dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/showDataButton"
        android:layout_alignEnd="@+id/showDataButton" />

</RelativeLayout>
