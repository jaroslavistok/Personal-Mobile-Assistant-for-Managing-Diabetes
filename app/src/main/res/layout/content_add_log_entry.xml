<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_log_entry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jaroslavistok.personalmobileassistantformanagingdiabetes.AddLogEntry"
    tools:showIn="@layout/activity_add_log_entry">



    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="45dp"
        android:id="@+id/date_text_field"
        android:hint="Dátum"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:layout_below="@+id/date_text_field"
        android:layout_alignRight="@+id/date_text_field"
        android:layout_alignEnd="@+id/date_text_field"
        android:layout_marginTop="24dp"
        android:id="@+id/time_text_field"
        android:hint="Čas"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/glucose_text_field"
        android:layout_alignRight="@+id/glucose_text_field"
        android:layout_alignEnd="@+id/glucose_text_field"
        android:layout_marginTop="40dp"
        android:id="@+id/fast_insuline_text_field"
        android:hint="Rýchly inzulín" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="29dp"
        android:id="@+id/slow_insuline_text_field"
        android:hint="Pomalý inzulín"
        android:layout_below="@+id/fast_insuline_text_field"
        android:layout_alignLeft="@+id/fast_insuline_text_field"
        android:layout_alignStart="@+id/fast_insuline_text_field" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/slow_insuline_text_field"
        android:layout_alignLeft="@+id/slow_insuline_text_field"
        android:layout_alignStart="@+id/slow_insuline_text_field"
        android:layout_marginTop="18dp"
        android:id="@+id/note_text_field"
        android:hint="Poznámka" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="29dp"
        android:id="@+id/glucose_text_field"
        android:hint="Cukor"
        android:layout_below="@+id/time_text_field"
        android:layout_alignLeft="@+id/time_text_field"
        android:layout_alignStart="@+id/time_text_field" />
</RelativeLayout>
